package elements;

public class Castle {
	public static int totalCastle = 0;
	//castle property	
	public int CastleID;
	int x,y;
	int state;
	int belongTo;
	String name;
	//contains
	int soldier;
	int gold;
	
	
	public Castle(){
		totalCastle++;
		CastleID = totalCastle;
	}
	
	public Castle(int newX, int newY, int newBelongTo){
		x = newX;
		y = newY;
		belongTo = newBelongTo;
		totalCastle++;
		CastleID = totalCastle;
		name = "City" + CastleID;
		soldier = 100;
	}
		
	public int getSoldier(){
		return soldier;
	}
	
	
	
}
